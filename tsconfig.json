{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "es6",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "paths": {
      "baseUrl": ["."],

      "@src/*": ["./src/*", "./packages/custom-module/*", "./packages/core/*"],
      "@core/*": ["./packages/core/*"],
      "@custom-module/*": ["./packages/custom-module/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
